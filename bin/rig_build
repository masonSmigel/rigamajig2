#!/usr/bin/env mayapy

import maya.standalone

import maya.cmds as cmds
import os
import rigamajig2.maya.builder as builder


def build_rig(rigfile, publish=True, outputfile=None, assetName=None, fileType=None, versioning=True):

    b = builder.Builder(rigfile)
    b.run(publish=publish, outputfile=outputfile, assetName=assetName, fileType=fileType, versioning=versioning)


print("rig build complete and saved to : {}".format("/Users/masonsmigel/Documents/dev/maya/rigamajig2/archetypes/biped/out/biped.rig"))

os._exit(0)


if __name__ == '__main__':
    parser = ArgumentParser(description="""
    List all elements within the show
    """)
    parser.add_argument("rigfile", help="rig file to source data from", metavar="RIGFILE")
    parser.add_argument("-p", "--type-list", dest="pulish", nargs='+',
                        help="specify publish state of the rig", metavar="PUBLISH")
    lselm(type=type)
